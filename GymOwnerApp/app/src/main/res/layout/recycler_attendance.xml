<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/attendancecard"
    android:layout_marginStart="12dp"
    android:layout_marginEnd="12dp"
    android:layout_marginHorizontal="10dp"
    android:layout_marginVertical="10dp"
    app:cardCornerRadius="20dp"
    app:cardElevation="8dp"
    app:cardUseCompatPadding="false">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/recattImage"
            android:layout_width="63dp"
            android:layout_height="59dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:scaleType="centerCrop"
            android:src="@drawable/baseline_person_24" />

        <TextView
            android:id="@+id/recattUser"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_toEndOf="@id/recattImage"
            android:text="Username"
            android:textColor="@color/lavender"
            android:textSize="20sp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/recattphno"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/recattUser"
            android:layout_marginStart="20dp"
            android:layout_toEndOf="@id/recattImage"
            android:maxLines="1"
            android:text="Phone No."
            android:textColor="@color/lavender"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/recattendance"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="40dp"
            android:layout_marginTop="20dp"
            android:layout_toEndOf="@id/recattUser"
            android:text="P"
            android:paddingRight="30dp"
            android:textAlignment="center"
            android:textColor="@color/lavender"
            android:textSize="35sp" />

        <TextView
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:text="Gym Plan"
            android:id="@+id/recattgymplan"
            android:textColor="@color/lavender"
            android:layout_marginStart="20dp"
            android:layout_marginBottom="12dp"
            android:layout_toEndOf="@id/recattImage"
            android:layout_below="@id/recattphno"
            android:textSize="16sp"/>


    </RelativeLayout>

</androidx.cardview.widget.CardView>