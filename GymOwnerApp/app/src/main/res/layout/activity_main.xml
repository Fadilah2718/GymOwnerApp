<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/homepagebg"
    tools:context=".MainActivity">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="100dp"
        android:columnCount="2"
        android:scrollbars="horizontal"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="15dp"
        android:fadeScrollbars="true"
        app:fastScrollEnabled="false"
        android:rowCount="2" >

        <ImageView
            android:layout_width="169dp"
            android:layout_height="180dp"
            android:background="@drawable/homeregister"
            android:paddingLeft="10dp"/>

        <ImageView
            android:layout_width="169dp"
            android:layout_height="180dp"
            android:layout_row="0"
            android:layout_column="1"
            android:background="@drawable/homeprofile"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="163dp"
            android:background="@drawable/homeattendance"
            android:paddingLeft="40dp" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/homegymplan"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/homeusergraph"
            android:paddingLeft="40dp"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/homelogout"/>

    </GridLayout>

</androidx.constraintlayout.widget.ConstraintLayout>